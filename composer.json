{
    "name": "cmspro/streaming-cms",
    "description": "Self-hosted streaming CMS (movies, series, live TV) with Netflix-like frontend.",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-intl": "*",
        "vlucas/phpdotenv": "^5.6",
        "guzzlehttp/guzzle": "^7.9",
        "monolog/monolog": "^3.6",
        "symfony/routing": "^6.4",
        "symfony/http-foundation": "^6.4",
        "symfony/http-kernel": "^6.4",
        "symfony/dependency-injection": "^6.4",
        "symfony/config": "^6.4",
        "symfony/yaml": "^6.4",
        "nesbot/carbon": "^3.8",
        "intervention/image": "^3.8",
        "onesignal/onesignal-php": "^2.0",
        "php-tmdb/api": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "guzzlehttp/psr7": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": "phpunit"
    }
}